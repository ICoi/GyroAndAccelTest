<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Gyro And Accel 테스트용 어플리케이션" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <TextView android:text="gravity " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gravityTV"
        android:textSize="30dp"
        android:layout_below="@+id/btn_finish"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


    <TextView android:text="pressure " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressureTV"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gravityTV"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First"
        android:id="@+id/btn_first"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_second"
        android:layout_alignStart="@+id/btn_second" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second"
        android:id="@+id/btn_second"
        android:layout_below="@+id/btn_first"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third"
        android:id="@+id/btn_third"
        android:layout_below="@+id/btn_second"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forth"
        android:id="@+id/btn_forth"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_third" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btn_send"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_start"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/btn_first"
        android:layout_toStartOf="@+id/btn_first" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/btn_finish"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn_first"
        android:layout_toEndOf="@+id/btn_first" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send22"
        android:id="@+id/button_send2"
        android:layout_below="@+id/pressureTV"
        android:layout_alignLeft="@+id/btn_first"
        android:layout_alignStart="@+id/btn_first" />

</RelativeLayout>
